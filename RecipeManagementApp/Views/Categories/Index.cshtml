@using RecipeManagementApp.Context.Data;
@model IEnumerable<Category>

<h2>Categories</h2>

<a asp-action="Create" class="btn btn-success">Create new category</a>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Parent Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Title</td>
                <td>@(category.ParentCategory != null ? category.ParentCategory.Title : "-")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-primary">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
