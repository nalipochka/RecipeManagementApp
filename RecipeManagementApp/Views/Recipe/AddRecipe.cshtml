@using RecipeManagementApp.Models.RecipeViewModels;
@model AddRecipeViewModel

@{
    ViewData["Title"] = "AddRecipe";
}

<h1>AddRecipe</h1>

<h4>Recipe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddRecipe" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RecipeDTO.Title" class="control-label"></label>
                <input asp-for="RecipeDTO.Title" class="form-control" />
                <span asp-validation-for="RecipeDTO.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecipeDTO.Description" class="control-label"></label>
                <input asp-for="RecipeDTO.Description" class="form-control" />
                <span asp-validation-for="RecipeDTO.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecipeDTO.Instruction" class="control-label"></label>
                <input asp-for="RecipeDTO.Instruction" class="form-control" />
                <span asp-validation-for="RecipeDTO.Instruction" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecipeDTO.CategoryId" class="control-label"></label>
                <select asp-for="RecipeDTO.CategoryId" class="form-control" asp-items="@Model.CategoriesSl"></select>
                <span asp-validation-for="RecipeDTO.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Images" class="control-label"></label>
                <input asp-for="Images" type="file" class="form-control" multiple />
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
